<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.prashant.todolist.savings">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your current saving"
        android:textSize="18sp"
        android:layout_margin="32dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/saving_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="null"
        android:gravity="center"
        android:textColor="#00c853"
        android:textSize="70sp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#616161"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance left for the day : "
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/day_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:layout_weight="4"
            android:layout_margin="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance left for the month : "
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/month_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:layout_weight="4"
            android:layout_margin="16dp"/>
    </LinearLayout>

</LinearLayout>
